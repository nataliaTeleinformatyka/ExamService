{# templates/teacherUserList.html.twig #}
{% extends 'base.html' %}

{% block body %}
    <div class="container">
        <div class="signClass">
            <a href="{{ path('user')}}" class="btn btn-info btn-lg">
                <span class="glyphicon glyphicon-plus-sign"></span> Dodaj nowego studenta
            </a>
        </div>
        <div class="list">
            <p>Lista użytkowników : </p>
            <div>
                {% if information==true %}
                {% for user_data in data %}
                    <p>{{ user_data.first_name|default('') }}  {{ user_data.last_name|default('')}} - <b> Klasa: </b> {{ user_data.group_of_students|default('') }} <b>Adres e-mail:</b> {{ user_data.email|default('')}}
                        <a href="{{ path('userDelete', { 'userId': user_data.id|default('')}) }}" title="Usuń">
                            <span class="glyphicon glyphicon-remove-sign"></span> Usuń
                        </a></p>
                {% endfor%}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}