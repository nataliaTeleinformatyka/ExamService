{# templates/learningMaterialsGroupList.html.twig #}
{% extends 'base.html' %}

{% block menu %}
    {% include 'menu.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="sign">
            <a href="{{ path('learningMaterialsGroup') }}" class="btn btn-info btn-lg buttonNav">
                <span class="glyphicon glyphicon-plus-sign"></span> Add new learning materials group
            </a>
        </div>
        {% for error in infoDelete %}
            {{ error.message }}
        {% endfor %}
        {% if information==true %}
            <table>
                <tr>
                    <th class="ISort col-lg-1 col-md-4">Id</th>
                    <th class="SSort col-lg-12 col-md-4">Name of Group</th>
                    <th class="col-lg-4 col-md-4"></th>
                </tr>
                {% for action in data|sort %}
                    {% if action.id !="" or action.id=="0" %}
                        <tr>
                            <td> {{ action.id|default('undefined') }}  </td>
                            <td> {{ action.name_of_group|default('undefined') }}  </td>
                            <td>
                                <div class="sign">
                                    <a href="{{ path('deleteGroup', { 'learningMaterialsGroup': action.id }) }}" title="delete learning materials group">
                                        <span class="glyphicon glyphicon-remove-sign"></span>
                                    </a>
                                    <a href="{{ path('editLearningMaterialsGroup', { 'id': action.id }) }}" title="edit learning materials group">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                    <a href="{{ path('learningMaterialList', { 'learningMaterialsGroupId': action.id }) }}" title="learning materials list">
                                        <span class="glyphicon glyphicon-list"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor%}
            </table>
        {% endif %}
    </div>
{% endblock %}