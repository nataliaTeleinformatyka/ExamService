{# templates/userList.html.twig #}
{% extends 'base.html' %}
{% block menu %}
    {% include 'menu.html.twig' %}
{% endblock %}
{% block body %}
<div class="container">
<div class="sign">
    <a href="{{ path('user') }}" class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-plus-sign"></span> Add new user
    </a>
</div>

<table>
    <tr>
        <td>Id</td>
        <td>First name</td>
        <td>Last name</td>
        <td>Email</td>
        <td>Role</td>
        <td>Group of students</td>
        <td>Last login</td>
        <td>Last password change</td>
        <td>Date Registration</td>
        <td></td>
    </tr>
    {% for action in data %}
        {% if( information == true) %}
        <tr>
            <td> {{ action.id|default('undefined') }}  </td>
            <td> {{ action.first_name|default('undefined') }} </td>
            <td> {{ action.last_name|default('undefined') }} </td>
            <td> {{ action.email|default('undefined') }}</td>
            <td> {{ action.role|default('undefined') }}</td>
            <td> {{ action.group_of_students|default('') }}</td>
            <td> {{ action.last_login|default('undefined') }}</td>
            <td> {{ action.last_password_change|default('undefined') }}</td>
            <td> {{ action.date_registration|default('undefined') }}</td>
            <td> <a href="{{ path('userDelete', { 'userId': action.id }) }}">
                    <span class="glyphicon glyphicon-remove-sign"></span>
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
            </td>
        </tr>
        {% endif %}
    {% endfor%}
</table>
</div>
{% endblock %}
