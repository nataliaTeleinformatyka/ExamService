{# templates/resultList.html.twig #}
{% extends 'base.html' %}
{% block menu %}
{% include 'menu.html.twig' %}
{% endblock %}
{% block body %}
<div class="container">

    {% if information==true %}
<table>
    <tr class="informationRow">
        <td>Id</td>
        <td>User id</td>
        <td>Exam id</td>
        <td>Number of attempt</td>
        <td>Points</td>
        <td>Is passed</td>
        <td>Date of resolve exam</td>

    </tr>
    {% for action in data %}
        {% if action.id !="" or action.id=="0" %}
        <tr>
        <td> {{ action.id|default('undefined') }}  </td>
        <td> {{ action.user_id|default('undefined') }}  </td>
        <td> {{ action.exam_id|default('undefined') }} </td>
        <td> {{ action.number_of_attempt|default('') }} </td>
        <td> {{ action.points|default('') }} </td>
        <td> {{ action.is_passed|default('') }}</td>
        <td> {{ action.date_of_resolve_exam|default('') }}</td>

    </tr>
        {% endif %}
    {% endfor%}
</table>
    {% endif %}
</div>
{% endblock %}
