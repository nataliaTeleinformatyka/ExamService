{# templates/answerList.html.twig #}
{% extends 'base.html.twig' %}
{% block menu %}
    {% include 'menu.html.twig' %}
{% endblock %}
{% block body %}
Exam {{ examId }} Question {{ questionId }}
<div class="sign">
    <a href="{{ path('answer', { 'examId': examId, 'questionId': questionId}) }}" class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-plus-sign"></span> Add new answer
    </a>
</div>
<table>
    <tr>
        <td>Id</td>
        <td>Content</td>
        <td>Is true</td>
        <td>Is active</td>
    </tr>
    {% for action in data %}
        <tr>
            <td> {{ action.id|default('undefined') }}  </td>
            <td> {{ action.content|default('undefined') }}  </td>
            <td> {{ action.is_true|default('') }} </td>
            <td> {{ action.is_active|default('') }} </td>

            <td><div class="sign">
                    <a href="{{ path('deleteAnswer', { 'exam': examId, 'question': questionId, 'answer': action.id}) }}" title="delete answer">
                        <span class="glyphicon glyphicon-remove-sign"></span>
                    </a>
                    <a href="#" title="edit answer">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                </div>
            </td>
        </tr>
    {% endfor%}
</table>
{% endblock %}