{# templates/questionList.html.twig #}
{% include 'menu.html.twig' %}
<nav>Id Exam {{ idExam }}</nav>
<div class="sign">
    <a href="{{ path('question', { 'idExam': idExam}) }}" class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-plus-sign"></span> Add new question
    </a>
</div>
<table>
    <tr>
        <td>Id</td>
        <td>Content</td>
        <td>Maximum answers</td>
        <td>Is multichoice</td>
        <td>Is file</td>
    </tr>
    {% for action in data %}
        <tr>
            <td> {{ action.id|default('') }}  </td>
            <td> {{ action.content|default('') }}  </td>
            <td> {{ action.max_answers|default('') }} </td>
            <td> {{ action.is_multichoice|default('') }} </td>
            <td> {{ action.is_file|default('') }} </td>

            <td><div class="sign">
                        <a href="{{ path('deleteQuestion', { 'exam' : idExam, 'question': action.id }) }}" title="delete question">
                            <span class="glyphicon glyphicon-remove-sign"></span>
                        </a>
                        <a href="#" title="edit question">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                        <a href="{{ path('answerList', { 'questionId' : action.id, 'examId': action.id_exam }) }}" title="Answer list">
                            <span class="glyphicon glyphicon-list"></span>
                        </a>
                        <a href="#">
                            <span class="glyphicon glyphicon-file" title="File list"></span>
                        </a>
                </div>
            </td>
        </tr>
    {% endfor%}
</table>