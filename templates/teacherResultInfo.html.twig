{# templates/teacherResultInfo.html.twig #}
{% extends 'base.html' %}

{% block body %}
    <div class="container">
        <div class="sign">
            <a href="{{ path('teacherExamList') }}" class="btn btn-info btn-lg buttonNav">
                <span class="glyphicon glyphicon-home"></span> Strona główna
            </a>
        </div>
        <div class="list">
            {% if information==true %}
                {% for action in result %}
                    <p><b>Podejście numer :</b> {{ action.id|default('') }}
                        <b>Ilość punktów :</b> {{ action.points|default('') }}
                        <b>Czy egzamin ukończono z wynikiem pozytywnym:</b> {{ action.is_passed|default('') }}
                        </p>
                {% endfor%}
            {% endif %}
        </div>
        <button type="button" class="btn btn-default btn-md backButton buttonColor">
            <a href="{{ path('teacherExamInfo', { 'exam': exam_id}) }}" class="glyphicon glyphicon-chevron-left">Back</a>
        </button>
    </div>
{% endblock %}